@{
    Layout = null;
    
}
@using CMS.Entities.Concrete
@model CMS.Entities.Dtos.CentralAddDto

<div class="form-group">
    <form asp-action="Central" id="ajaxFormSender" data-url="@Url.Action("Central","Add")">

        <input type="hidden" name="IsValid" value="@ViewData.ModelState.IsValid.ToString()" />
        <div asp-validation-summary="All" class="text-danger" id="validation-summary" aria-hidden="true" style="display:none"></div>

        <div class="form-group">
            <label asp-for="Name"></label>
            <span class="text-danger" asp-validation-for="Name"></span>
            <input class="form-control" asp-for="Name" />
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <span class="text-danger" asp-validation-for="Description"></span>
            <input class="form-control" asp-for="Description" />
        </div>
        <div class="form-group">
            <label asp-for="Number"></label>
            <span class="text-danger" asp-validation-for="Number"></span>
            <input class="form-control" asp-for="Number" />
        </div>
        <div class="form-group">
            <label asp-for="ParentId"></label>
            <span class="text-danger" asp-validation-for="ParentId"></span>
            <select class="form-control" asp-for="ParentId" asp-items="@(new SelectList(ViewBag.Companies,"Id","Name"))">
            </select>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>
    </form>
    <script src="~/assets/js/custom/ajax-form-sender.js"></script>
</div>