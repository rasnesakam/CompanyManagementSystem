
@{
    Layout = null;
}
@using CMS.Entities.Dtos
@model ProjectAddDto

<div class="form-group p-4">

    <form id="ajaxFormSender" data-url="https://localhost:44310/api/Project">

        <div class="row mb-3">
            <label asp-for="Name"></label>
            <input class="form-control" asp-for="Name" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="row mb-3">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" />
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>
        <div class="row mb-3">
            <label asp-for="StartDate"></label>
            <div class="input-group">
                <div class="input-group date date-start">
                    <input asp-for="StartDate" class="form-control" autocomplete="off" />
                </div>
            </div>
            <span class="text-danger" asp-validation-for="StartDate"></span>
        </div>
        <div class="row mb-3">
            <label asp-for="FinalDate"></label>
            <div class="input-group">
                <div class="input-group date date-end">
                    <input asp-for="FinalDate" class="form-control" id="final_date" autocomplete="off">
                </div>
            </div>
            <span class="text-danger" asp-validation-for="FinalDate"></span>
        </div>
        <div class="row mb-3">
            <label asp-for="StatusId"> </label>
            <div class="input-group mt-2 mb-2 w-100">
                @if (ViewBag.ParentId == null)
                {
                    <select class="form-control load-from-api" asp-for="StatusId" api-url="https://localhost:44310/api/Status">
                        <template>
                            <option value="${entry.Id}">${entry.Name}</option>
                        </template>
                    </select>
                }
            </div>
            <span class="text-danger" asp-validation-for="StatusId"></span>
        </div>
        <div class="row mb-3">
            <label asp-for="Tags"> </label>
            <div class="input-group mt-2 mb-2 w-100">
                @if (ViewBag.Tags == null)
                {
                    <select id="tags" class=" load-from-api selectpicker" data-width="100%" multiple data-actions-box="true" api-url="https://localhost:44310/api/Tags">
                        <template>
                            <option value="${entry.Id}">${entry.Name}</option>
                        </template>
                    </select>
                }
            </div>
            <span class="text-danger" asp-validation-for="Tags"></span>
            <p>
                <i class="fa fa-question-circle icon-sm text-info"></i>
                <span class="text-muted text-sm-center"> Etiketler, projenizi daha hızlı bulmanızı sağlar</span>
            </p>
        </div>
        <div class="row">
            <input asp-for="CompanyId" type="hidden" value="@ViewBag.CompanyId" />
            <input asp-for="CreatedByName" value="@ViewBag.User.UserName" type="hidden" />
            <input asp-for="ModifiedByName" value="@ViewBag.User.UserName" type="hidden" />
            <input type="submit" class="btn btn-hover-primary" value="Ekle">
        </div>
    </form>
    <script>
        $('.selectpicker').selectpicker('show');
    </script>
    <script src="~/assets/js/custom/loadFromApi.js"></script>
    <script src="~/assets/js/custom/ajax-form-sender.js"></script>
</div>
