<body id="kt_body" class="header-fixed header-mobile-fixed subheader-enabled subheader-fixed aside-enabled aside-fixed aside-minimize-hoverable page-loading">
    <!--begin::Main-->
    <div class="d-flex flex-column flex-root">
        <!--begin::Login-->
        <div class="login login-4 login-signin-on d-flex flex-row-fluid" id="kt_login">
            <div class="d-flex flex-center flex-row-fluid bgi-size-cover bgi-position-top bgi-no-repeat" style="background-image: url('assets/media/bg/bg-3.jpg');">
                <div class="login-form text-center p-7 position-relative overflow-hidden">
                    <!--begin::Login Header-->
                    <div class="d-flex flex-center mb-15">
                        <a href="#">
                            <img style="border: solid; border-color: lightgray; border-width:1px; border-bottom-width:2px; border-radius: 10px 10px;"
                                 src="https://www.kandoyazilim.com/assets/images/kandoryataylogo.png" class="max-h-75px" alt="" />
                        </a>
                    </div>
                    <!--end::Login Header-->
                    <!--begin::Login Sign in form-->
                    <div class="login-signin">
                        <div class="mb-20">
                            <h3>Sisteme giriş yap</h3>
                            <div class="text-muted font-weight-bold">Sisteme girmek için bilgilerinizi doldurun:</div>
                        </div>
                        <div class="mb-10">
                            <div  asp-validation-summary="All" class="text-muted font-weight-bold"></div>
                        </div>

                        <form asp-action="Login" asp-route-ReturnUrl="@ViewBag.ReturnUrl" method="post">
                            <div class="form-group mb-5">
                                <label asp-for="UserNameOrEMail"></label>
                                <input class="form-control h-auto form-control-solid py-4 px-8" asp-for="UserNameOrEMail"/>
                            </div>
                            <div class="form-group mb-5">
                                <label asp-for="Password"></label>
                                <input class="form-control h-auto form-control-solid py-4 px-8" asp-for="Password"/>
                            </div>
                            <div class="form-group d-flex flex-wrap justify-content-between align-items-center">
                                <div class="checkbox-inline">
                                    <label class="checkbox m-0 text-muted">
                                        <input asp-for="RememberMe" />
                                        <span></span><label asp-for="RememberMe"></label>
                                    </label>
                                </div>
                            </div>
                            <button type="submit" name="login" id="submitb" class="btn btn-primary font-weight-bold px-9 py-4 my-3 mx-4">Giriş yap</button>
                        </form>

                    </div>
                    <!--end::Login Sign in form-->

                </div>
            </div>
        </div>
        <!--end::Login-->
    </div>
    <!--end::Main-->
